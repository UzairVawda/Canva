<%- include('./shared/head.ejs') %>
    <link href="/css/editPost.css" rel="stylesheet">
    <title>Canva!</title>
    </head>
    <body>

        <main>
            <%- include('./shared/homeSideNav.ejs') %>
            <div class="card-body pt-5 text-center">
                <form class="mb-2 md-5 mt-md-4" autocomplete="off" method="post" action="/updatePost/<%= post._id %>">

                    <h2 class="fw-bold mb-2">Edit Post</h2>
                    <img src="<%= post.imageURL %>">
                    <div class="form-outline form-white mb-4">
                        <input type="title" id="title" class="form-control-lg" name="title"
                        maxlength="50" placeholder="title..." value="<%= post.blogTitle %>"/>
                    </div>
                    <div class="form-outline form-white mb-4">
                        <textarea type="body" id="body" class="form-control-lg" name="body"
                        maxlength="500" placeholder="say someting..."><%= post.summary %></textarea>
                    </div>
                    <div>
                        <button class="btn btn-outline-dark btn-lg px-5" type="submit">Update</button>
                    </div>
                </form>
                <form method="get" action="/editAndDelete">
                    <button class="btn btn-outline-dark btn-lg px-5" type="submit">Cancel</button> 
                </form>
            </div>   
        </main>
        <script src="/bootstrap.bundle.min.js"></script>

        <script src="/js/home.js"></script>
    </body>