<%- include('./shared/head.ejs') %> 
<link href="/css/userProfile.css" rel="stylesheet">
<title>Canva!</title>
</head>

<body>

  <main>
    <%- include('./shared/homeSideNav.ejs') %> 
    <div class="body p-3 pt-5 text-center">
      <img id="pfp-img" src="/img/default-pfp.jpeg" alt="profile-picture" style="width:200px">
      <h1>User<%= userName %></h1>
      <h2>Bio:....</h2>
      <h2>Likes:...</h2>
    </div>
    <div class="posts text-center">
      <% for(let x of posts) { %>
        <div class="p-4">
          <div class="card px-3 bg-dark" style="width: 30rem;"">
            <img id="img-post" style="width: 28rem;" src="<%= x.imageURL %> " class="card-img-top pt-3">
            <div class="card-body">
              <h5 class="card-title">
                <%= x.title %>
              </h5>
              <p class="card-text">
                <%= x.summary %>
              </p>
              <div>
                <% if (x.likedUsers.includes(userId)) { %>
                  <button class="like-btn pb-2 liked" id="like" data-blogid="<%= x._id %>"><i class="fa-solid fa-thumbs-up"></i></button>
                <% } else { %>
                  <button class="like-btn pb-2" id="like" data-blogid="<%= x._id %>"><i class="fa-solid fa-thumbs-up"></i></button>
                <% } %> 
                <p id="likeCount"><%= x.likeCount %></p>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </main>
  <script src="/bootstrap.bundle.min.js"></script>

  <script src="/js/home.js"></script>
</body>

