<%- include('./shared/head.ejs') %>
  <link href="/css/home.css" rel="stylesheet">
  <title>Canva!</title>
  </head>
  <style>
    #feed {
      color: rgb(40, 92, 161)
    }
    .like-btn {
      all: unset;
      cursor: pointer;
    }
    .p-4 {
      position: relative;
      color: #fff;
    }
    .posts {
      width: 100%;
      overflow-y: scroll;
      overflow-x: scroll;
      display: flex;
      flex-wrap: wrap;
    }
    img {
      border-radius: 15px;
    }
  </style>

  <body>

    <main>
      <%- include('./shared/homeSideNav.ejs') %>
      <div class="posts">
        <% for(let x of posts) { %>
          <div class="p-4">
            <div class="card px-3 bg-dark" style="width: 18rem; height: 35rem;">
              <img style="width: 16rem; height: 16rem;" src="<%= x.imageURL %> " class="card-img-top pt-3">
              <div class="card-body">
                <h5 class="card-title"><%= x.title %></h5>
                <p class="card-text"><%= x.summary %></p>
              </div>
              <div>
                <button class="like-btn pb-2"><i class="fa-regular fa-heart"></i></button>
              </div>
            </div>
          </div>
        <% } %>
      </div>
 
    </main>
    <script src="/bootstrap.bundle.min.js"></script>

    <script src="/js/home.js"></script>
  </body>

  </html>