<%- include('./shared/head.ejs') %>
    <link href="/css/editProfile.css" rel="stylesheet">
    <title>Canva!</title>
    </head>
    <body>
        <main>
            <%- include('./shared/homeSideNav.ejs') %>
            <div class="card-body pt-5 text-center">
                <form class="mb-2 md-5 mt-md-4" autocomplete="off" method="post" action="/updateProfile" enctype="multipart/form-data">

                    <h2 class="fw-bold mb-2">Edit Profile</h2>
                    <div class="form-outline form-white mb-4">
                        <img id="imagePreview" src="<%= user.userProfileImage %>" alt="profile-picture">
                        <input type="username" id="title" class="form-control-lg" name="username"
                        placeholder="Username..." value="<%= user.userName %>" maxlength="50" />
                    </div>
                    <div class="form-outline form-white mb-4">
                        <input type="file" id="img" name="user-profile-image" accept="image/*" onchange="showPreview(event)">
                    </div> 
                    <div>
                        <button class="btn btn-outline-dark btn-lg px-5" type="submit">Update</button>
                    </div>
                </form>
                <form method="get" action="/profile">
                    <button class="btn btn-outline-dark btn-lg px-5" type="submit">Cancel</button> 
                </form>
            </div>   
        </main>
        <script src="/bootstrap.bundle.min.js"></script>

        <script src="/js/home.js"></script>
    </body>