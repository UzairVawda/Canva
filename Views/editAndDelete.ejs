<link href="/css/editAndDelete.css" rel="stylesheet">
<%- include('./shared/head.ejs') %>
  <title>Canva!</title>
  </head>
  <body>

    <main>
      <%- include('./shared/homeSideNav.ejs') %>
      <div class="posts">
        <% for(let x of posts) { %>
          <div class="p-4">
            <div class="card px-3 bg-dark" style="width: 18rem;height:35rem;">
              <img src="<%= x.imageURL %> " class="card-img-top pt-3">
              <div class="card-body">
                <h5 class="card-title">
                  <%= x.title %>
                </h5>
                <p class="card-text">
                  <%= x.summary %>
                </p>
              </div>
              <div class="pt-2">
                <form id="edit-btn">
                  <button class="like-btn pb-2"><i class="fa-solid fa-pen-to-square"></i></button>
                </form>
                <form id="del-btn" method="post" action="/editAndDelete/delete/<%= x._id %>">
                  <button class="like-btn pb-2 align-right"><i class="fa-sharp fa-solid fa-trash" data-toggle="modal" data-target="#exampleModal"></i></button>
                </form>
              </div>
            </div>
          </div>
        <% } %>
    </main>
    <script src="/bootstrap.bundle.min.js"></script>

    <script src="/js/home.js"></script>
  </body>

  </html>